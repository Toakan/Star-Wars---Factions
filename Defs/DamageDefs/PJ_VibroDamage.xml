      <averagePainPerSeverityOld>0.00625</averagePainPerSeverityOld>
      <canMerge>true</canMerge>
			<destroyedLabel>Sliced off</destroyedLabel>
			<destroyedOutLabel>sliced out</destroyedOutLabel>
		</injuryProps>
	</HediffDef>
	
